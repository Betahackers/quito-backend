<tr>
  <%= content_tag :td, user.first_name %>
  <%= content_tag :td, user.last_name %>
  <%= content_tag :td do %>
    <ul class="list-unstyled">
      <% user.articles.each do |a| %>
        <%= content_tag :li, a.title %>
      <% end %>
    </ul>
  <% end %>
  <%= content_tag :td do %>
    <%= link_to t(:edit), edit_user_path(user) %>
  <% end %>
</tr>