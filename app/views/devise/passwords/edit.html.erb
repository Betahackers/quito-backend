<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class='form-signin-heading'>
        Change your password
      </h3>
    </div>
    <div class="panel-body">
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: false, placeholder: "New password", required: true, autofocus: true %>
        <%= f.input :password_confirmation, label: false, placeholder: "Confirm your new password", required: true %>
      </div>

      <%= f.button :submit, "Change my password", class: 'btn btn-md btn-primary btn-block' %>
      <br/>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

